<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<RelativeLayout android:id="@+id/RelativeLayout01"
        android:layout_height="fill_parent" 
        android:layout_width="fill_parent">
        <ImageView 
        	android:background="@drawable/background_l"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            />
        <ImageView 
        	android:background="@drawable/line_l"
        	android:layout_marginTop="170px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
        <ImageView 
        	android:background="@drawable/line_l"
        	android:layout_marginTop="291px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
        <ImageButton android:id="@+id/btn_close"
        	android:background="@drawable/return_button"
            android:layout_marginLeft="735px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageButton android:id="@+id/btn_more"
        	android:background="@drawable/more_button"
            android:layout_marginLeft="727px"
            android:layout_marginTop="411px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageButton android:id="@+id/btn_radio1"
        	android:background="@drawable/radiobox_check"
            android:layout_marginLeft="280px"
            android:layout_marginTop="84px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageButton android:id="@+id/btn_radio2"
        	android:background="@drawable/radiobox_nocheck"
            android:layout_marginLeft="522px"
            android:layout_marginTop="84px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageButton android:id="@+id/btn_radio3"
        	android:background="@drawable/radiobox_check"
            android:layout_marginLeft="280px"
            android:layout_marginTop="204px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <ImageButton android:id="@+id/btn_radio4"
        	android:background="@drawable/radiobox_nocheck"
            android:layout_marginLeft="522px"
            android:layout_marginTop="204px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView android:id="@+id/tv_title1"
            android:layout_marginLeft="280px"
            android:layout_marginTop="5px"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:text="@string/title1"
            />
        <TextView android:id="@+id/tv_title2"
            android:layout_marginLeft="20px"
            android:layout_marginTop="425px"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:text="@string/title3"
            />
        <TextView android:id="@+id/tv_radio1_title"
            android:layout_marginLeft="42px"
            android:layout_marginTop="90px"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:text="@string/setting_display_mode"
            />
        <TextView android:id="@+id/tv_radio1_sel1"
            android:layout_marginLeft="350px"
            android:layout_marginTop="90px"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:text="@string/setting_letterbox"
            />
        <TextView android:id="@+id/tv_radio1_sel2"
            android:layout_marginLeft="592px"
            android:layout_marginTop="90px"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:text="@string/setting_stretch"
            />
        <TextView android:id="@+id/tv_radio2_title"
            android:layout_marginLeft="42px"
            android:layout_marginTop="210px"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:text="@string/setting_vr_mode"
            android:visibility="invisible"
            />
        <TextView android:id="@+id/tv_radio2_sel1"
            android:layout_marginLeft="350px"
            android:layout_marginTop="210px"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:text="@string/setting_system"
            android:visibility="invisible"
            />
        <TextView android:id="@+id/tv_radio2_sel2"
            android:layout_marginLeft="592px"
            android:layout_marginTop="210px"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:text="@string/setting_fb"
            android:visibility="invisible"
            />
    </RelativeLayout>
</LinearLayout>
