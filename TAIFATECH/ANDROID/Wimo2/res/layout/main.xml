<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main" >
    
    <TextView 
        android:id="@+id/wimo_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_top"
        android:text="@string/string_app"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"/>
    
    <ImageView 
        android:id="@+id/logo_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wimo_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo_signal4" />
    
    <Button 
        android:id="@+id/btn_wimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_signal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_start"
        android:text="@string/string_null"
        android:textColor="@color/button_text"
        android:textSize="26sp"
        android:textStyle="bold" />
    
    
    <RelativeLayout 
        android:id="@+id/wifi_btn_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom" >
        <Button 
            android:id="@+id/btn_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dip"
            android:background="@drawable/button_network"
            android:text="@string/string_setting_wifi"
            android:textSize="20sp"
            android:textColor="@color/button_text"
            android:textStyle="bold" />
    </RelativeLayout>
    
    <TextView android:id="@+id/tv_msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wifi_btn_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:singleLine="true"
        android:text="@string/string_null"
        android:textSize="18sp"
        android:textColor="@android:color/white" />
    
